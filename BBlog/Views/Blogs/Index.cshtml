@model BBlog.Models.BlogCategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Blogs" asp-action="Index" method="get">
    <p>
        <select asp-for="blogCategory" asp-items="Model.categories">
            <option value="">All</option>
        </select>

        Keyword: <input type="text" name="SearchString">
        <input class="btn btn-default" type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.blogs[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.blogs[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.blogs[0].PostDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.blogs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
